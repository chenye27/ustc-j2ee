<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="success_xsl.xsl"?>
<view>
	<header>
		<title>a viewer in MVC</title>
	</header>
	<body>
		<form>
			<name>logoutform</name>
			<action>logout.action</action>
			<method>post</method>
			<textView>
				<name>userName</name>
				<label>Login Name:</label>
				<value>Water</value>
			</textView>
			<textView>
				<name>userAge</name>
				<label>Age</label>
				<value>30</value>
			</textView>
			<buttonView>
				<name>logoutButton</name>
				<label>Logout</label>		
			</buttonView>
		</form>
	</body>
</view>